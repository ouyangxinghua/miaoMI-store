<!-- miniprogram/pages/mine/mine.wxml -->
<view class="container">
    <view class="mine-card">
        <view class="avatar">
            <image src="{{userInfo.avatarUrl}}" style="width:100%;height:100%;"></image>
        </view>
        <view class="message">
            <text class="nickname">{{userInfo.nickName}}</text>
            <view class="bottom">绑定小米帐号</view>
        </view>
        <view class="right">
            <image src="../../images/二维码.png" style="width: 60rpx;height:60rpx;" />
        </view>
    </view>
    <view class="wealth flex">
        <image src="../../images/财富.png" class="image"/>
        <text>小米精品服务</text><text class="neice">(内测)</text>
    </view>
    <view class="items-list">
            <view class="item flex" bindtap="orderList">
                <image src="../../images/订单.png" class="image"/>
                <text>我的订单</text>
            </view>
            <view class="item flex">
                <image src="../../images/会员.png" class="image"/>
                <text>会员中心</text>
            </view>
            <view class="item flex">
                <image src="../../images/优惠券 (1).png" class="image"/>
                <text>我的优惠券</text>
            </view>
            <view class="item flex">
                <image src="../../images/f k.png" class="image"/>
                <text>我的F码</text>
            </view>
    </view>
    <view class="set flex">
        <image src="../../images/设 置.png" class="image"/>
        <text>设置</text>
    </view>
</view>