/* miniprogram/pages/mine/mine.wxss */
.container{
    width: 100%;
    margin-top: 20rpx;
    color: black;
    font-size: 30rpx;
    overflow: hidden;
}
.mine-card{
    padding-left: 30rpx;
    background-color: #fff;
    width: 100%;
    height: 135rpx;
    display: flex;
    align-items: center;
}
.avatar{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}
.nickname{
    display: block;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}
.bottom{
    height: 40rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background-color: #E8E8E8 ;
    font-size: 20rpx;
    line-height: 40rpx;
    border-radius: 5rpx;
}
.right{
    position: relative;
    left: 320rpx;
}
.wealth{
    background-color: #fff;
    margin-top: 20rpx;
    width: 100%;
    height: 100rpx;
    padding-left: 40rpx;
}
.wealth .neice{
    color: rgba(0,0,0,0.6);
    font-size: 25rpx;
    margin-left: 10rpx;
}
.image{
    width: 55rpx;
    height: 55rpx;
    margin-right: 20rpx;
}
.flex{
    display: flex;
    align-items: center
}
.items-list{
    background-color: #fff;
    margin-top: 20rpx;
    width: 100%;
    height: 400rpx;
    padding-left: 30rpx;
}
.item{
    width: 100%;
    border-bottom: 1px solid #E8E8E8;
    height: 25%;
    padding-left: 10rpx;
}
.set{
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    padding-left: 40rpx;
}
