.container{
    width: 100%;
}
.header{
    width: 100%;
    height: 700rpx;
    background-color: #ffffff;
}
.searchBar{
    height: 85rpx;
    background-color: #fd6800;
    position: relative;
}
.searchBar-inner{
    height: 55rpx;
    width: 92%;
    background-color: #fff;
    color: #515151;
    border-radius: 28rpx;
    font-size: 26rpx;
    position: absolute;
    top: 15rpx;
    left: 4%;
    text-align: center;
    line-height: 55rpx;
}
.slide-image{
    width: 100%;
    height: 100%;
}
.header-menu__item{
    width: 20%;
    text-align: center;
    margin-top: 25rpx;
}
.header-menu{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}
.header-menu__text{
    display: block;
    color: #515151;
    font-size: 26rpx;
}

.goodList {
  background-color: #fff;
  margin: 22rpx;
}
.topBorder::before {
  content: '';
  position: absolute;
  display: inline-block;
  height: 1rpx;
  width: 200%;
  top: 0;
  transform-origin: 0 0;
  border-top: 1rpx solid #e0e0e0;
  transform: scale(.5);
  z-index: 1;
}
.rightBorder::after {
  content: '';
  position: absolute;
  height: 200%;
  width: 1rpx;
  right: -1rpx;
  top: 0;
  transform-origin: 0 0;
  border-right: 1rpx solid#e0e0e0;
  transform: scale(.5);
  z-index: 1;
}
.goodList-title {
  padding-left: 33rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.goodList-item {
  position: relative;
}
.list {
  width: 100%;
  display: flex;
  overflow-x: scroll;
  flex-wrap: wrap;
}
.list .item {
  width: 50%;
  flex-shrink: 0;
  position: relative;
}